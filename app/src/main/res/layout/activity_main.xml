<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2B2B2B"
    android:layoutDirection="ltr"
    >

    <TextView
        android:id="@+id/headLine"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#8C8C8C"
        android:fontFamily="monospace"
        android:gravity="center"
        android:padding="4sp"
        android:text="מחסן 5 - מעקב מנתקים"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addReleaser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="652dp"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/white"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="24sp"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="380dp"
        android:layout_height="417dp"
        android:layout_marginTop="156dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/real_photo" />

    <TextView
        android:id="@+id/workingProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="32dp"
        android:text="בהשמשה:"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inAction" />

    <TextView
        android:id="@+id/out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="0.5dp"
        android:text="נמצאים בביצוע:"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inHouse" />

    <TextView
        android:id="@+id/infoSymbol1"
        android:layout_width="5dp"
        android:layout_height="27dp"
        android:elevation="10dp"
        android:layout_marginBottom="0.5dp"
        android:forceHasOverlappingRendering="true"
        android:text="i"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/info1"
        app:layout_constraintEnd_toEndOf="@+id/info1"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/info1"
        app:layout_constraintTop_toTopOf="@+id/info1"
        app:layout_constraintVertical_bias="2.5" />

    <TextView
        android:id="@+id/infoSymbol2"
        android:layout_width="5dp"
        android:layout_height="27dp"
        android:elevation="10dp"
        android:layout_marginBottom="0.5dp"
        android:forceHasOverlappingRendering="true"
        android:text="i"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/info2"
        app:layout_constraintEnd_toEndOf="@+id/info2"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/info2"
        app:layout_constraintTop_toTopOf="@+id/info2"
        app:layout_constraintVertical_bias="2.5" />

    <TextView
        android:id="@+id/infoSymbol3"
        android:layout_width="5dp"
        android:layout_height="27dp"
        android:elevation="10dp"
        android:layout_marginBottom="0.5dp"
        android:forceHasOverlappingRendering="true"
        android:text="i"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/info3"
        app:layout_constraintEnd_toEndOf="@+id/info3"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/info3"
        app:layout_constraintTop_toTopOf="@+id/info3"
        app:layout_constraintVertical_bias="2.5" />

    <Button
        android:id="@+id/info1"
        android:layout_width="24dp"
        android:layout_height="28dp"
        android:backgroundTint="#A2BAAFAF"
        android:text=""
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/out"
        app:layout_constraintEnd_toStartOf="@+id/out"
        app:layout_constraintTop_toTopOf="@+id/out"
        app:layout_constraintVertical_bias="1.3" />

    <Button
        android:id="@+id/info3"
        android:layout_width="24dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#A2BAAFAF"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/workingProgress"
        app:layout_constraintEnd_toStartOf="@+id/workingProgress"
        app:layout_constraintTop_toTopOf="@+id/workingProgress" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inAction"
        android:layout_width="377dp"
        android:layout_marginRight="4dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/out" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inHouse"
        android:layout_marginRight="4dp"
        android:layout_width="377dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/in" />

    <TextView
        android:id="@+id/in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginRight="4dp"
        android:text="במחסן 5:"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headLine" />

    <Button
        android:id="@+id/info2"
        android:layout_width="24dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#A2BAAFAF"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/in"
        app:layout_constraintEnd_toStartOf="@+id/in"
        app:layout_constraintTop_toTopOf="@+id/in"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inProgress"
        android:layout_width="377dp"
        android:layout_height="150dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/workingProgress" />

    <EditText
        android:id="@+id/search"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/ic_search"
        android:ems="10"
        android:paddingEnd="5dp"
        android:paddingBottom="3dp"
        android:hint="הכנס מספר סידורי"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textDirection="rtl"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headLine" />


</androidx.constraintlayout.widget.ConstraintLayout>